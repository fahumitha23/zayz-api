{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "target": "es2016",
    "lib": [
      "es5",
      "es6"
    ],
    "module": "ESNext",
    "rootDir": "./",
    "esModuleInterop": true,
    "baseUrl": "servers/",
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "moduleResolution": "node"
  },
  "include": [
    "./**/*.ts",
    "./**/*.js",
    "./**/*.json",
    "./*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*.ts",
    "dist"
  ]
}